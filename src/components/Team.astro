---
import "aos/dist/aos.css";

const doctors = [
  {
    name: "Dr. Juan Pérez",
    role: "Otorrinolaringólogo",
    img: "https://randomuser.me/api/portraits/men/32.jpg",
    delay: 100,
  },
  {
    name: "Dra. María López",
    role: "Otorrinolaringóloga",
    img: "https://randomuser.me/api/portraits/women/44.jpg",
    delay: 200,
  },
  {
    name: "Dr. Pedro Herrera",
    role: "Otorrinolaringólogo",
    img: "https://randomuser.me/api/portraits/men/53.jpg",
    delay: 300,
  },
  {
    name: "Dra. Ana Martínez",
    role: "Otorrinolaringóloga",
    img: "https://randomuser.me/api/portraits/women/68.jpg",
    delay: 400,
  },
  {
    name: "Lic. Carlos Gómez",
    role: "Audiólogo",
    img: "https://randomuser.me/api/portraits/men/85.jpg",
    delay: 500,
  },
];
---

<section class="bg-white py-20 relative overflow-hidden">
  <!-- Imagen de fondo -->
  <div
    class="absolute inset-0 bg-center bg-cover opacity-30 pointer-events-none"
    style="background-image: url('instalaciones/cabina.webp'); background-attachment: fixed;"
  ></div>

  <div class="max-w-7xl mx-auto px-6 text-center relative z-10 mb-36">
    <!-- Título -->
    <h2 class="text-4xl md:text-5xl mb-28 font-extrabold text-teal-500 drop-shadow-lg">
      Nuestro
      <span class="bg-teal-500 px-3 py-1 rounded-xl text-white shadow-lg">
        Equipo Médico
      </span>
    </h2>

    <!-- Carrusel en mobile / grid en desktop -->
    <div class="flex gap-6 overflow-x-auto snap-x snap-mandatory sm:grid sm:grid-cols-2 lg:grid-cols-5 sm:gap-10 scrollbar-hide">
      {doctors.map((doc) => (
        <div
          class="bg-white rounded-2xl shadow-xl p-8 hover:shadow-2xl transition group snap-center shrink-0 w-64 sm:w-auto"
          data-aos="fade-up"
          data-aos-delay={doc.delay}
        >
          <img
            src={doc.img}
            alt={doc.name}
            class="w-36 h-36 mx-auto rounded-full border-4 border-white shadow-md group-hover:scale-105 transition"
          />
          <h3 class="mt-6 text-xl font-semibold text-teal-700">{doc.name}</h3>
          <p class="text-gray-500 text-base">{doc.role}</p>
        </div>
      ))}
    </div>
  </div>
</section>
