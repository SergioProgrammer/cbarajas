<section id="contacto" class="relative overflow-hidden bg-white py-20 px-6 md:px-16">
  <!-- Fondos decorativos -->
  <div class="absolute -top-20 -left-20 w-72 h-72 bg-teal-100 rounded-full opacity-30 blur-3xl animate-pulse"></div>
  <div class="absolute -bottom-16 -right-16 w-60 h-60 bg-teal-100 rounded-full opacity-20 blur-3xl animate-pulse delay-200"></div>

  <div class="relative z-10 max-w-6xl mx-auto">
    <!-- Título -->
    <h2 class="text-4xl md:text-5xl font-extrabold text-center text-teal-600 mb-12 drop-shadow-sm">
      ¿Tiene alguna
      <span class="inline-block bg-teal-500 px-4 py-1.5 rounded-xl text-white shadow-md">
        duda?
      </span>
    </h2>

    <!-- Contenido -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      
      <!-- Información lateral (ejemplo: datos de contacto) -->
      <div class="flex flex-col justify-center space-y-6 bg-gradient-to-br from-teal-50 to-white rounded-2xl shadow-md p-8 border border-teal-100">
        <h3 class="text-2xl font-semibold text-teal-700">Contáctenos</h3>
        <p class="text-gray-600 leading-relaxed">
          Puede escribirnos directamente a través del formulario o si lo prefiere, puede contactarnos en:
        </p>
        <ul class="space-y-3 text-gray-700">
          <li class="flex items-center gap-3">
            <span class="w-8 h-8 flex items-center justify-center rounded-full bg-teal-500 text-white shadow">📞</span>
            +34 922 123 456
          </li>
          <li class="flex items-center gap-3">
            <span class="w-8 h-8 flex items-center justify-center rounded-full bg-teal-500 text-white shadow">✉️</span>
            info@clinicabarajas.com
          </li>
          <li class="flex items-center gap-3">
            <span class="w-8 h-8 flex items-center justify-center rounded-full bg-teal-500 text-white shadow">📍</span>
            Av. de la Salud, 15 – Santa Cruz de Tenerife
          </li>
        </ul>
      </div>

      <!-- Formulario de contacto -->
      <div class="bg-white/90 rounded-2xl shadow-lg p-8 border border-teal-100 backdrop-blur-sm">
        <h3 class="text-xl font-semibold text-teal-700 mb-6">Enviar un mensaje</h3>
        <form class="space-y-5">
          <div>
            <label for="nombre" class="block text-teal-700 mb-1 font-medium">Nombre</label>
            <input type="text" id="nombre" name="nombre"
              class="w-full border border-teal-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-400 bg-white shadow-sm" />
          </div>
          <div>
            <label for="email" class="block text-teal-700 mb-1 font-medium">Correo electrónico</label>
            <input type="email" id="email" name="email"
              class="w-full border border-teal-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-400 bg-white shadow-sm" />
          </div>
          <div>
            <label for="mensaje" class="block text-teal-700 mb-1 font-medium">Mensaje</label>
            <textarea id="mensaje" name="mensaje" rows="4"
              class="w-full border border-teal-200 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-teal-400 bg-white shadow-sm"></textarea>
          </div>
          <button type="submit"
            class="w-full md:w-auto bg-teal-500 text-white px-8 py-3 rounded-lg font-semibold shadow-md hover:bg-teal-600 hover:scale-[1.02] transition">
            Enviar
          </button>
        </form>
      </div>

    </div>
  </div>
</section>
